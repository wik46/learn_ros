<?xml version="1.0"?>

<!-- This is a a launch file to launch the wheeled robot for
	display purposes only.
-->

<launch>
	<!-- This tag is used so that we can specify the model that we want
		to launch from the commandline using model:="robot-name"
	-->
	<arg name="model"/>
	<!-- Here we load our urdf file to the parameter server. -->
	<param 
		name="robot_description" 
		textfile="$(arg model)"/>

	<!-- We launch three different nodes-->
	<node 
		pkg="joint_state_publisher_gui"
		name="joint_state_publisher" 
		type="joint_state_publisher_gui"
	/>
	<!-- Second node that we launch-->
	<node
		pkg="robot_state_publisher"
		type="state_publisher"
		name="robot_state_publisher"
	/>
	<!-- Third node that we launch -->
	<node 
		pkg="rviz"
		type="rviz"
		name="rviz"
		args="-d $(find wheel_robot)/rviz/urdf.rviz"
	/>

</launch>
